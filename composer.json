{
    "name": "sclinternet/scl-zf-single-entity-controller",
    "description": "A utility library for Zend Framework 2 which makes it easier to create controllers which work with a single entity type.",
    "type": "library",
    "license": "MIT",
    "homepage": "https://github.com/SCLInternet/SclZfSingleEntityController",
    "authors": [
        {
            "name": "Tom Oram",
            "email": "tom@scl.co.uk",
            "homepage": "http://github.com/tomphp"
        }
    ],
    "require": {
        "php": ">=5.4",
        "zendframework/zendframework" : ">=2.2",
        "sclinternet/scl-zf-generic-mapper": "dev-master"
    },
    "require-dev": {
        "phpunit/phpunit" : "3.7.*",
        "squizlabs/php_codesniffer" : "1.*",
        "phpmd/phpmd" : "1.4.0",
        "satooshi/php-coveralls": "dev-master"
    },
    "autoload": {
        "psr-0": {
            "SclZfSingleEntityController": "src/"
        }
    }
}
